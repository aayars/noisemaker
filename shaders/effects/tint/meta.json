{
  "id": "tint",
  "label": "Tint",
  "stage": "effect",
  "shader": {
    "entryPoint": "main",
    "url": "/shaders/effects/tint/tint.wgsl"
  },
  "resources": {
    "input_texture": {
      "kind": "sampledTexture",
      "format": "rgba32float"
    },
    "output_buffer": {
      "kind": "storageBuffer",
      "size": "pixel-f32x4"
    },
    "params": {
      "kind": "uniformBuffer",
      "size": 32
    }
  },
  "parameters": [
    {
      "name": "enabled",
      "type": "boolean",
      "default": true,
      "label": "Enabled",
      "description": "Toggle the tint effect on or off."
    },
    {
      "name": "alpha",
      "type": "float",
      "default": 0.5,
      "min": 0.0,
      "max": 1.0,
      "step": 0.01,
      "label": "Alpha",
      "description": "Blend amount between original and tinted output."
    }
  ],
  "parameterBindings": {
    "alpha": "params.alpha"
  }
}

{
  "id": "reverb",
  "label": "Reverb",
  "stage": "effect",
  "shader": {
    "entryPoint": "main",
    "url": "/shaders/effects/reverb/reverb.wgsl"
  },
  "resources": {
    "input_texture": {
      "kind": "sampledTexture",
      "format": "rgba32float"
    },
    "output_buffer": {
      "kind": "storageBuffer",
      "size": "pixel-f32x4"
    },
    "params": {
      "kind": "uniformBuffer",
      "size": 32
    }
  },
  "parameters": [
    {
      "name": "enabled",
      "type": "boolean",
      "default": true,
      "label": "Enabled",
      "description": "Toggle the reverb effect on or off."
    },
    {
      "name": "octaves",
      "type": "int",
      "default": 3,
      "min": 1,
      "max": 8,
      "step": 1,
      "label": "Octaves",
      "description": "Number of octaves for reverb layers."
    },
    {
      "name": "iterations",
      "type": "int",
      "default": 2,
      "min": 1,
      "max": 8,
      "step": 1,
      "label": "Iterations",
      "description": "Number of iterations per octave."
    },
    {
      "name": "ridges",
      "type": "boolean",
      "default": false,
      "label": "Ridges",
      "description": "Apply ridge transform to input before reverb."
    },
    {
      "name": "time",
      "type": "float",
      "default": 0.0,
      "min": 0.0,
      "max": 100.0,
      "step": 0.01,
      "label": "Time",
      "description": "Animation time parameter."
    },
    {
      "name": "speed",
      "type": "float",
      "default": 1.0,
      "min": 0.0,
      "max": 5.0,
      "step": 0.1,
      "label": "Speed",
      "description": "Animation speed multiplier."
    }
  ],
  "parameterBindings": {
    "width": {
      "buffer": "params",
      "offset": 0
    },
    "height": {
      "buffer": "params",
      "offset": 1
    },
    "channel_count": {
      "buffer": "params",
      "offset": 2
    },
    "octaves": {
      "buffer": "params",
      "offset": 3
    },
    "iterations": {
      "buffer": "params",
      "offset": 4
    },
    "ridges": {
      "buffer": "params",
      "offset": 5
    },
    "time": {
      "buffer": "params",
      "offset": 6
    },
    "speed": {
      "buffer": "params",
      "offset": 7
    }
  }
}

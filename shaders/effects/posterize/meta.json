{
  "id": "posterize",
  "label": "Posterize",
  "stage": "effect",
  "shader": {
    "entryPoint": "main",
    "url": "/shaders/effects/posterize/posterize.wgsl"
  },
  "resources": {
    "input_texture": {
      "kind": "sampledTexture",
      "format": "rgba32float"
    },
    "output_buffer": {
      "kind": "storageBuffer",
      "size": "pixel-f32x4"
    },
    "params": {
      "kind": "uniformBuffer",
      "size": 32
    }
  },
  "parameters": [
    {
      "name": "enabled",
      "type": "boolean",
      "default": true,
      "label": "Enabled",
      "description": "Toggle the posterize pass on or off."
    },
    {
      "name": "levels",
      "type": "float",
      "default": 5,
      "min": 2,
      "max": 32,
      "step": 1,
      "label": "Levels",
      "description": "Number of tonal bands to keep after posterization."
    },
    {
      "name": "gamma",
      "type": "float",
      "default": 1.0,
      "min": 0.1,
      "max": 3,
      "step": 0.05,
      "label": "Gamma",
      "description": "Gamma curve applied before quantization."
    }
  ],
  "parameterBindings": {
    "width": {
      "buffer": "params",
      "offset": 0
    },
    "height": {
      "buffer": "params",
      "offset": 1
    },
    "channel_count": {
      "buffer": "params",
      "offset": 2
    },
    "levels": {
      "buffer": "params",
      "offset": 3
    },
    "gamma": {
      "buffer": "params",
      "offset": 4
    },
    "time": {
      "buffer": "params",
      "offset": 5
    },
    "enabled": {
      "kind": "toggle"
    }
  }
}

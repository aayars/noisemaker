{
  "id": "spatter",
  "label": "Spatter",
  "stage": "effect",
  "shader": {
    "entryPoint": "main",
    "url": "/shaders/effects/spatter/spatter.wgsl"
  },
  "resources": {
    "input_texture": {
      "kind": "sampledTexture",
      "format": "rgba32float"
    },
    "output_buffer": {
      "kind": "storageBuffer",
      "size": "pixel-f32x4"
    },
    "params": {
      "kind": "uniformBuffer",
      "size": 32
    }
  },
  "parameters": [
    {
      "name": "enabled",
      "type": "boolean",
      "default": true,
      "label": "Enabled",
      "description": "Toggle the spatter effect on or off."
    },
    {
      "name": "color",
      "type": "boolean",
      "default": true,
      "label": "Color",
      "description": "Use color for spatter effect."
    },
    {
      "name": "time",
      "type": "float",
      "default": 0.0,
      "min": 0.0,
      "max": 100.0,
      "step": 0.01,
      "label": "Time",
      "description": "Animation time parameter."
    },
    {
      "name": "speed",
      "type": "float",
      "default": 1.0,
      "min": 0.0,
      "max": 5.0,
      "step": 0.1,
      "label": "Speed",
      "description": "Animation speed multiplier."
    }
  ],
  "parameterBindings": {
    "color": "params.color",
    "time": "params.time",
    "speed": "params.speed"
  }
}

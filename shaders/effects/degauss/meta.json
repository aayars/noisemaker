{
  "id": "degauss",
  "label": "Degauss",
  "stage": "effect",
  "description": "Simulates CRT-style degaussing wobble by lens-warping each color channel independently",
  "shader": {
    "entryPoint": "main",
    "url": "/shaders/effects/degauss/degauss.wgsl"
  },
  "resources": {
    "input_texture": {
      "kind": "sampledTexture",
      "format": "rgba32float"
    },
    "output_buffer": {
      "kind": "storageBuffer",
      "size": "pixel-f32x4"
    },
    "params": {
      "kind": "uniformBuffer",
      "size": 32
    }
  },
  "parameters": [
    {
      "name": "displacement",
      "type": "float",
      "default": 0.0625,
      "min": 0,
      "max": 0.25,
      "step": 0.001,
      "label": "Displacement",
      "description": "Degaussing displacement amount"
    },
    {
      "name": "time",
      "type": "float",
      "default": 0.0,
      "min": 0,
      "max": 100,
      "step": 0.1,
      "label": "Time",
      "description": "Animation time parameter"
    },
    {
      "name": "speed",
      "type": "float",
      "default": 1.0,
      "min": 0,
      "max": 5,
      "step": 0.1,
      "label": "Speed",
      "description": "Animation speed multiplier"
    }
  ],
  "parameterBindings": {
    "width": { "buffer": "params", "offset": 0 },
    "height": { "buffer": "params", "offset": 1 },
    "displacement": { "buffer": "params", "offset": 2 },
    "time": { "buffer": "params", "offset": 3 },
    "speed": { "buffer": "params", "offset": 4 },
    "channel_count": { "buffer": "params", "offset": 5 }
  }
}

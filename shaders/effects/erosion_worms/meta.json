{
  "id": "erosion_worms",
  "label": "Erosion Worms",
  "stage": "effect",
  "shader": {
    "entryPoint": "main",
    "url": "/shaders/effects/erosion_worms/erosion_worms.wgsl"
  },
  "resources": {
    "input_texture": {
      "kind": "sampledTexture",
      "format": "rgba32float"
    },
    "output_buffer": {
      "kind": "storageBuffer",
      "size": "pixel-f32x4"
    },
    "params": {
      "kind": "uniformBuffer",
      "size": 64
    },
    "prev_texture": {
      "kind": "sampledTexture",
      "format": "rgba32float",
      "persistent": true
    },
    "agent_state_in": {
      "kind": "readOnlyStorageBuffer",
      "size": "custom",
      "persistent": true
    },
    "agent_state_out": {
      "kind": "storageBuffer",
      "size": "custom",
      "persistent": true
    }
  },
  "temporal": {
    "enabled": true,
    "feedback": "prev_texture",
    "agentBuffers": ["agent_state_in", "agent_state_out"]
  },
  "parameters": [
    {
      "name": "enabled",
      "type": "boolean",
      "default": true,
      "label": "Enabled",
      "description": "Toggle the erosion worms effect on or off."
    },
    {
      "name": "density",
      "type": "float",
      "default": 5,
      "min": 1,
      "max": 200,
      "step": 1,
      "label": "Density",
      "description": "Number of erosion worms per sqrt(pixels). Lower = faster."
    },
    {
      "name": "contraction",
      "type": "float",
      "default": 1.0,
      "min": 0.1,
      "max": 5.0,
      "step": 0.1,
      "label": "Contraction",
      "description": "Gradient descent step length multiplier."
    },
    {
      "name": "quantize",
      "type": "boolean",
      "default": false,
      "label": "Quantize",
      "description": "Quantize gradient values (floor)."
    },
    {
      "name": "alpha",
      "type": "float",
      "default": 0.25,
      "min": 0.0,
      "max": 1.0,
      "step": 0.05,
      "label": "Alpha",
      "description": "Blend intensity of worm trails."
    },
    {
      "name": "inverse",
      "type": "boolean",
      "default": false,
      "label": "Inverse",
      "description": "Invert gradient direction (climb vs descend)."
    },
    {
      "name": "xy_blend",
      "type": "boolean",
      "default": false,
      "label": "XY Blend",
      "description": "Enable XY-based color blending."
    },
    {
      "name": "speed",
      "type": "float",
      "default": 1.0,
      "min": 0,
      "max": 3,
      "step": 0.1,
      "label": "Speed",
      "description": "Animation speed multiplier."
    },
    {
      "name": "worm_lifetime",
      "type": "float",
      "default": 30,
      "min": 0,
      "max": 500,
      "step": 5,
      "label": "Worm Lifetime",
      "description": "Frames before respawn (0 = never)."
    }
  ],
  "parameterBindings": {
    "width": {
      "buffer": "params",
      "offset": 0
    },
    "height": {
      "buffer": "params",
      "offset": 1
    },
    "channel_count": {
      "buffer": "params",
      "offset": 2
    },
    "density": {
      "buffer": "params",
      "offset": 4
    },
    "iterations": {
      "buffer": "params",
      "offset": 5
    },
    "contraction": {
      "buffer": "params",
      "offset": 6
    },
    "quantize": {
      "buffer": "params",
      "offset": 7
    },
    "alpha": {
      "buffer": "params",
      "offset": 8
    },
    "inverse": {
      "buffer": "params",
      "offset": 9
    },
    "xy_blend": {
      "buffer": "params",
      "offset": 10
    },
    "time": {
      "buffer": "params",
      "offset": 11
    },
    "speed": {
      "buffer": "params",
      "offset": 12
    },
    "worm_lifetime": {
      "buffer": "params",
      "offset": 13
    },
    "enabled": {
      "kind": "toggle"
    }
  }
}

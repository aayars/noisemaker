    {
      "name": "alpha",
      "type": "float",
      "default": 1.0,
      "min": 0.0,
      "max": 1.0,
      "step": 0.01,
      "label": "Alpha",
      "description": "Shadow effect blend strength."
    },
    {
      "name": "time",
      "type": "float",
      "default": 0.0,
      "min": 0.0,
      "max": 100.0,
      "step": 0.01,
      "label": "Time",
      "description": "Animation time parameter."
    },
    {
      "name": "speed",
      "type": "float",
      "default": 1.0,
      "min": 0.0,
      "max": 5.0,
      "step": 0.1,
      "label": "Speed",
      "description": "Animation speed multiplier."
    }
  ],
  "parameterBindings": {
    "width": {
      "buffer": "params",
      "offset": 0
    },
    "height": {
      "buffer": "params",
      "offset": 1
    },
    "channel_count": {
      "buffer": "params",
      "offset": 2
    },
    "alpha": {
      "buffer": "params",
      "offset": 3
    },
    "time": {
      "buffer": "params",
      "offset": 4
    },
    "speed": {
      "buffer": "params",
      "offset": 5
    }
  }
}

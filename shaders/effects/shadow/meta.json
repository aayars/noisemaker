{
  "id": "shadow",
  "label": "Shadow",
  "stage": "effect",
  "shader": {
    "entryPoint": "main",
    "url": "/shaders/effects/shadow/shadow.wgsl"
  },
  "resources": {
    "input_texture": {
      "kind": "sampledTexture",
      "format": "rgba32float"
    },
    "output_buffer": {
      "kind": "storageBuffer",
      "size": "pixel-f32x4"
    },
    "params": {
      "kind": "uniformBuffer",
      "size": 32
    },
    "reference_texture": {
      "kind": "sampledTexture",
      "format": "rgba32float"
    }
  },
  "parameters": [
    {
      "name": "enabled",
      "type": "boolean",
      "default": true,
      "label": "Enabled",
      "description": "Toggle the shadow effect on or off."

    }
  },
  "parameters": [
    {
      "name": "enabled",
      "type": "boolean",
      "default": true,
      "label": "Enabled",
      "description": "Toggle the refract effect on or off."
    },
    {
      "name": "displacement",
      "type": "float",
      "default": 0.5,
      "min": 0.0,
      "max": 2.0,
      "step": 0.01,
      "label": "Displacement",
      "description": "Strength of the refraction displacement."

{
  "id": "derivative",
  "label": "Derivative",
  "stage": "effect",
  "description": "Applies derivative convolution kernels using various distance metrics",
  "shader": {
    "entryPoint": "main",
    "url": "/shaders/effects/derivative/derivative.wgsl"
  },
  "resources": {
    "input_texture": {
      "kind": "sampledTexture",
      "format": "rgba32float"
    },
    "output_buffer": {
      "kind": "storageBuffer",
      "size": "pixel-f32x4"
    },
    "params": {
      "kind": "uniformBuffer",
      "size": 32
    }
  },
  "parameters": [
    {
      "name": "dist_metric",
      "type": "enum",
      "default": 1,
      "label": "Distance Metric",
      "description": "Distance calculation method",
      "options": [
        { "value": 1, "label": "Euclidean" },
        { "value": 2, "label": "Manhattan" },
        { "value": 3, "label": "Chebyshev" },
        { "value": 4, "label": "Octagram" },
        { "value": 101, "label": "Triangular" },
        { "value": 102, "label": "Hexagram" },
        { "value": 201, "label": "SDF" }
      ]
    },
    {
      "name": "with_normalize",
      "type": "boolean",
      "default": true,
      "label": "Normalize",
      "description": "Normalize the derivative output"
    },
    {
      "name": "alpha",
      "type": "float",
      "default": 1.0,
      "min": 0,
      "max": 1,
      "step": 0.01,
      "label": "Alpha",
      "description": "Blend amount with original (1.0 = full derivative)"
    },
    {
      "name": "time",
      "type": "float",
      "default": 0.0,
      "min": 0,
      "max": 100,
      "step": 0.1,
      "label": "Time",
      "description": "Animation time parameter"
    },
    {
      "name": "speed",
      "type": "float",
      "default": 1.0,
      "min": 0,
      "max": 5,
      "step": 0.1,
      "label": "Speed",
      "description": "Animation speed multiplier"
    }
  ],
  "parameterBindings": {
    "width": { "buffer": "params", "offset": 0 },
    "height": { "buffer": "params", "offset": 1 },
    "channel_count": { "buffer": "params", "offset": 2 },
    "dist_metric": { "buffer": "params", "offset": 3 },
    "with_normalize": { "buffer": "params", "offset": 4 },
    "alpha": { "buffer": "params", "offset": 5 },
    "time": { "buffer": "params", "offset": 6 },
    "speed": { "buffer": "params", "offset": 7 }
  }
}
